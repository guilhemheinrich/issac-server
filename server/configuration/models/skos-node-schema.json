{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://issac/skos-node",
    "title": "SKOSnode",
    "description": "A node of a skos thesaurus",
    "type": "object",
    "properties": {
      "uri": {
        "description": "The unique identifier for a skos concept",
        "type": "string",
        "format": "uri"
      },
      "label": {
        "description": "Name of the skos:concept",
        "type": "string"
      }
    },
    "required": [ "uri", "label" ]
  }