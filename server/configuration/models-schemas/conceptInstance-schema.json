{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://issac/conceptInstance",
    "title": "ConceptInstance",
    "description": "Entity representing an instance of a concept",
    "type": "object",
    "properties": {
        "classes": {
            "description": "Classes (types, labels) of the object",
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "http://issac/concept"
                    },
                    {
                        "type": "string",
                        "format": "uri"
                    }
                ]
            },
            "uniqueItems": true,
            "minItems": 1
        },
        "uri": {
            "description": "The unique identifier for the object",
            "type": "string",
            "format": "uri"
        },
        "attributes": {
            "description": "Attributes of the object",
            "type": "array",
            "items": {
                "$ref": "http://issac/attributeInstance"
            }
        },
        "relationships": {
            "description": "Relationship of the object",
            "type": "array",
            "items": {
                "$ref": "http://issac/relationshipInstance"
            }
        }
    },
    "required": [
        "classes",
        "uri"
    ]
}