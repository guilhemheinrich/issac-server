{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://issac/relationshipInstance",
    "title": "RelationshipInstance",
    "description": "Entity representing an instance of a relationship",
    "type": "object",
    "properties": {
        "classes": {
            "description": "Classes (types, labels) of the relationship",
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "http://issac/relationship"
                    },
                    {
                        "type": "string",
                        "format": "uri"
                    }
                ]
            },
            "uniqueItems": true,
            "minItems": 1
        },
        "subjects": {
            "description": "Subject(s) (left-part) of the relationship",
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "http://issac/conceptInstance"
                    },
                    {
                        "type": "string",
                        "format": "uri"
                    }
                ]
            },         
            "minItems": 1,
            "uniqueItems": true
        },
        "objects": {
            "description": "Object(s) (right-part) of the relationship",
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "http://issac/conceptInstance"
                    },
                    {
                        "type": "string",
                        "format": "uri"
                    }
                ]
            },         
            "minItems": 1,
            "uniqueItems": true
        },
        "uri": {
            "description": "The unique identifier for the relationship",
            "type": "string",
            "format": "uri"
        },
        "attributes": {
            "description": "Attributes of the relationship",
            "type": "array",
            "items": {
                "$ref": "http://issac/attributeInstance"
            }
        }
    },
    "required": [
        "classes",
        "objects",
        "uri"
    ]
}